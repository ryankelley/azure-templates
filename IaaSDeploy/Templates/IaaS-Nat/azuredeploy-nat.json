{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "fwCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of FW VMs to be deployed to the DMZ subnet."
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "TestVNet",
      "metadata": {
        "description": "Name for the new VNet."
      }
    },
    "vnetPrefix": {
      "type": "string",
      "defaultValue": "10.10.0.0/16",
      "metadata": {
        "description": "CIDR prefix for the VNet address space."
      }
    },
    "dmzSubnetName": {
      "type": "string",
      "defaultValue": "DMZ",
      "metadata": {
        "description": "Name for the DMZ subnet."
      }
    },
    "dmzSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.10.1.0/24",
      "metadata": {
        "description": "CIDR address prefix for the DMZ subnet."
      }
    },
    "frontEndSubnetName": {
      "type": "string",
      "defaultValue": "FrontEnd",
      "metadata": {
        "description": "Name for the front end subnet."
      }
    },
    "frontEndSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.10.5.0/24",
      "metadata": {
        "description": "CIDR address prefix for the front end subnet."
      }
    },
    "backEndSubnetName": {
      "type": "string",
      "defaultValue": "BackEnd",
      "metadata": {
        "description": "Name for the back end subnet."
      }
    },
    "backEndSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.10.10.0/24",
      "metadata": {
        "description": "CIDR address prefix for the back end subnet."
      }
    },
    "mgmtSubnetName": {
      "type": "string",
      "defaultValue": "MGMT",
      "metadata": {
        "description": "Name for the back end subnet."
      }
    },
    "mgmtSubnetPrefix": {
      "type": "string",
      "defaultValue": "10.10.15.0/24",
      "metadata": {
        "description": "CIDR address prefix for the back end subnet."
      }
    },

    "frontEndNSGName": {
      "type": "string",
      "defaultValue": "NSG-FrontEnd",
      "metadata": {
        "description": "Name for the NSG used to allow RDP, HTTP and HTPPS"
      }
    },
    "backEndNSGName": {
      "type": "string",
      "defaultValue": "NSG-BackEnd",
      "metadata": {
        "description": "Name for the NSG used to allow RDP, SQL, and block Internet"
      }
    },
    "mgmtNSGName": {
      "type": "string",
      "defaultValue": "NSG-Mgmt",
      "metadata": {
        "description": "Name for the NSG used to allow RDP, SQL, and block Internet"
      }
    },
    "stdStorageName": {
      "type": "string",
      "defaultValue": "rkvnetstrgstd",
      "metadata": {
        "description": "Name for simple storage account."
      }
    },
    "stdStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS"
      ],
      "metadata": {
        "description": "Storage type."
      }
    },
    "prmStorageName": {
      "type": "string",
      "defaultValue": "rkvnetstrgprm",
      "metadata": {
        "description": "Name for simple storage account."
      }
    },
    "prmStorageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "allowedValues": [
        "Premium_LRS",
        "Premium_GRS",
        "Premium_ZRS"
      ],
      "metadata": {
        "description": "Storage type."
      }
    },
    "vmaIpAddress": {
      "type": "string",
      "defaultValue": "10.10.1.4",
      "metadata": {
        "description": "IP address for virtual appliance."
      }
    },
    "frontEndRouteTableName": {
      "type": "string",
      "defaultValue": "UDR-FrontEnd",
      "metadata": {
        "description": "Name for front end subnet route table."
      }
    },
    "backEndRouteTableName": {
      "type": "string",
      "defaultValue": "UDR-BackEnd",
      "metadata": {
        "description": "Name for back end subnet route table."
      }
    },
    "allowedRDPIP": {
      "type": "string",
      "defaultValue": "",
      "metadata": { "description": "IP Address in CIDR format to allow RDP for firewall" }
    }
  },
  "variables": {
    "fwVMSettings": {
      "vmSize": "Standard_D1",
      "adminUsername": "ubuntu",
      "adminPassword": "adminP@ssw0rd",
      "publisher": "Canonical",
      "offer": "UbuntuServer",
      "sku": "14.04.2-LTS",
      "version": "latest",
      "vmName": "FW",
      "osdisk": "osdiskfw",
      "nicName": "NICFW",
      "nicNameInternal": "NICFWINT",
      "nicNameNat": "NATFW",
      "pipName": "PIPFW",
      "pipNameNat": "PIPFNAT",
      "avsetName": "ASFW"
    },
    "location": "[resourceGroup().location]",
    "vmStorageAccountContainerName": "vhds",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
    "frontEndSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('frontEndSubnetName'))]",
    "backEndSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('backEndSubnetName'))]",
    "dmzSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('dmzSubnetName'))]",
    "templateBaseUrl": "http://kno2tststrgstd.blob.core.windows.net/templates/"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "storageTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'),'azuredeploy-storage.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "stdStorageType": { "value": "[parameters('stdStorageType')]" },
          "prmStorageType": { "value": "[parameters('prmStorageType')]" },
          "stdStorageName": { "value": "[parameters('stdStorageName')]" },
          "prmStorageName": { "value": "[parameters('prmStorageName')]" }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "vnetTemplate",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'),'azuredeploy-vnet-router.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vnetName": { "value": "[parameters('vnetName')]" },
          "vnetPrefix": { "value": "[parameters('vnetPrefix')]" },
          "dmzSubnetName": { "value": "[parameters('dmzSubnetName')]" },
          "dmzSubnetPrefix": { "value": "[parameters('dmzSubnetPrefix')]" },
          "frontEndSubnetName": { "value": "[parameters('frontEndSubnetName')]" },
          "frontEndSubnetPrefix": { "value": "[parameters('frontEndSubnetPrefix')]" },
          "backEndSubnetName": { "value": "[parameters('backEndSubnetName')]" },
          "backEndSubnetPrefix": { "value": "[parameters('backEndSubnetPrefix')]" },
          "mgmtSubnetName": { "value": "[parameters('mgmtSubnetName')]" },
          "mgmtSubnetPrefix": { "value": "[parameters('mgmtSubnetPrefix')]" },
          "frontEndNSGName": { "value": "[parameters('frontEndNSGName')]" },
          "backEndNSGName": { "value": "[parameters('backEndNSGName')]" },
          "vmaIpAddress": { "value": "[parameters('vmaIpAddress')]" },
          "frontEndRouteTableName": { "value": "[parameters('frontEndRouteTableName')]" },
          "backEndRouteTableName": { "value": "[parameters('backEndRouteTableName')]" },
          "allowedRDPIP": {"value": "[parameters('allowedRDPIP')]"}
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[variables('location')]",
      "name": "[concat(variables('fwVMSettings').pipName, copyindex(1))]",
      "properties": {
        "publicIPAllocationMethod": "dynamic"
      },
      "tags": {
        "displayName": "PublicIPAddresses - DMZ"
      },
      "copy": {
        "name": "webpipcount",
        "count": "[parameters('fwCount')]"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[variables('location')]",
      "tags": {
        "displayName": "NetworkInterfaces - DMZ"
      },
      "name": "[concat(variables('fwVMSettings').nicName, copyindex(1))]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('fwVMSettings').pipName, copyindex(1))]",
        "[concat('Microsoft.Resources/deployments/', 'vnetTemplate')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[concat('10.10.1.',copyindex(4))]",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(variables('fwVMSettings').pipName, copyindex(1)))]"
              },
              "subnet": {
                "id": "[variables('dmzSubnetRef')]"
              }
            }
          }
        ],
        "enableIPForwarding": true
      },
      "copy": {
        "name": "fwCount",
        "count": "[parameters('fwCount')]"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[variables('fwVMSettings').avsetName]",
      "location": "[variables('location')]",
      "dependsOn": [ ],
      "tags": {
        "displayName": "AvailabilitySet - FW"
      }
    },

    {
      "apiVersion": "2015-06-15",
      "name": "[concat(variables('fwVMSettings').vmName,copyindex(1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[variables('location')]",
      "copy": {
        "name": "fwvmcount",
        "count": "[parameters('fwCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('fwVMSettings').nicName, copyindex(1))]",
        "[concat('Microsoft.Compute/availabilitySets/', variables('fwVMSettings').avsetName)]",
        "[concat('Microsoft.Resources/deployments/', 'storageTemplate')]"
      ],
      "tags": {
        "displayName": "VMs - DMZ"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('fwVMSettings').avsetName)]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('fwVMSettings').vmSize]"
        },
        "osProfile": {
          "computerName": "[concat(variables('fwVMSettings').vmName,copyindex(1))]",
          "adminUsername": "[variables('fwVMSettings').adminUsername]",
          "adminPassword": "[variables('fwVMSettings').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('fwVMSettings').publisher]",
            "offer": "[variables('fwVMSettings').offer]",
            "sku": "[variables('fwVMSettings').sku]",
            "version": "[variables('fwVMSettings').version]"
          },
          "osDisk": {
            "name": "[concat(variables('fwVMSettings').osdisk,copyindex(1))]",
            "vhd": {
              "uri": "[concat('http://', parameters('stdStorageName'), '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('fwVMSettings').osdisk, copyindex(1),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('fwVMSettings').nicName,copyindex(1)))]",
              "properties": { "primary": true }
            }
          ]
        }
      }
    }
  ]
}
