{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "wrkCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of Web VMs to be deployed to the Front subnet."
      }
    },
    "vnetName": {
      "type": "string",
      "defaultValue": "TestVNet",
      "metadata": {
        "description": "Name for the new VNet."
      }
    },
    "stdStorageName": {
      "type": "string",
      "defaultValue": "rkvnetstrgstd",
      "metadata": {
        "description": "Name for simple storage account."
      }
    },
    "frontEndSubnetName": {
      "type": "string",
      "defaultValue": "FrontEnd",
      "metadata": {
        "description": "Name for the front end subnet."
      }
    },
    "frontEndNSGName": {
      "type": "string",
      "defaultValue": "NSG-FrontEnd",
      "metadata": {
        "description": "Name for the NSG used to allow RDP, HTTP and HTPPS"
      }
    },
    "backEndSubnetName": {
      "type": "string",
      "defaultValue": "BackEnd",
      "metadata": {
        "description": "Name for the front end subnet."
      }
    },
    "backEndNSGName": {
      "type": "string",
      "defaultValue": "NSG-BackEnd",
      "metadata": {
        "description": "Name for the NSG used to allow RDP, HTTP and HTPPS"
      }
    },
    "vmUser": {
      "type": "string",
      "metadata": {
        "description": "Username for the account on the VM"
      }
    },
    "vmPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the account on the VM"
      }
    },
    "modulesUrl": {
      "type": "string",
      "metadata": {
        "description": "URL for the DSC configuration module. NOTE: Can be a Github url(raw) to the zip file"
      }
    },
    "configurationFunction": {
      "type": "string",
      "defaultValue": "IISSetup.ps1\\IISWebsite",
      "metadata": {
        "description": "DSC configuration function to call"
      }
    },
    "domainToJoin": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD domain"
      }
    },
    "domainUsername": {
      "type": "string",
      "metadata": {
        "description": "Username of the account on the domain"
      }
    },
    "domainPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password of the account on the domain"
      }
    },
    "ouPath": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"
      }
    },
    "domainJoinOptions": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx"
      }
    },
    "loadBalancerName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name for the Load Balancer."
      }
    },
    "loadBalancerPublicIPName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the Load Balancer Public IP."
      }
    },
    "loadBalancerPublicIP": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the Load Balancer Public IP."
      }
    },
    "octoRole": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Octopus Deploy Role."
      }
    },
    "octoEnvironment": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Octopus Deploy Environment Name"
      }
    }
  },
  "variables": {
    "location": "[resourceGroup().location]",
    "apiVersion": "2015-06-15",
    "workVMSettings": {
      "vmSize": "Standard_D1",
      "adminUsername": "[parameters('vmUser')]",
      "adminPassword": "[parameters('vmPassword')]",
      "publisher": "MicrosoftWindowsServer",
      "offer": "WindowsServer",
      "sku": "2012-R2-Datacenter",
      "version": "latest",
      "vmName": "K2INT-WRK",
      "osdisk": "osdiskwrkint",
      "nicName": "NICINT-WRK",
      "avsetName": "ASINT-WEB"
    },
    "vmStorageAccountContainerName": "vhds",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',parameters('vnetName'))]",
    "frontEndSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('frontEndSubnetName'))]",
    "backEndSubnetRef": "[concat(variables('vnetID'),'/subnets/',parameters('backEndSubnetName'))]",
    "publicIPRef": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('loadBalancerPublicIPName'))]",
    "scriptsBaseUrl": "http://kno2tststrgstd.blob.core.windows.net/psscripts/",
    "VMScripts": {
      "fileUris": [
        "[concat(variables('scriptsBaseUrl'), 'start.ps1')]",
        "[concat(variables('scriptsBaseUrl'), 'octoInstall.ps1')]"
      ],
      "commandToExecute": "[concat('octoInstall.ps1', ' -env ', parameters('octoEnvironment'), ' -ip ', parameters('loadBalancerPublicIP') , ' -role ', parameters('octoRole'))]"
    },
    "lbID": "[resourceId('Microsoft.Network/loadBalancers',parameters('loadBalancerName'))]",
    "octoPorts": [ "10937", "10938", "10939", "10940" ]
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[variables('location')]",
      "tags": {
        "displayName": "NetworkInterfaces - Wrk"
      },
      "name": "[concat(variables('workVMSettings').nicName, copyindex(1))]",
      "properties": {
        "dnsSettings": {
          "dnsServers": [ "10.10.15.250", "8.8.8.8" ]
        },
        "networkSecurityGroup": { "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('frontEndNSGName'))]" },
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[variables('frontEndSubnetRef')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(variables('lbID'), '/backendAddressPools/WorkPool')]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[concat(variables('lbID'),'/inboundNatRules/octo-natvm', copyindex(4))]"
                }
              ]
            }
          }
        ]
      },
      "copy": {
        "name": "webniccount",
        "count": "[parameters('wrkCount')]"
      }
    },
    {
      "apiVersion": "2015-06-15",
      "name": "[concat(variables('workVMSettings').vmName,copyindex(1))]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[variables('location')]",
      "copy": {
        "name": "webvmcount",
        "count": "[parameters('wrkCount')]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/networkInterfaces/', variables('workVMSettings').nicName, copyindex(1))]"
      ],
      "tags": {
        "displayName": "VMs - Work"
      },
      "properties": {
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', variables('workVMSettings').avsetName)]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('workVMSettings').vmSize]"
        },
        "osProfile": {
          "computerName": "[concat(variables('workVMSettings').vmName,copyindex(1))]",
          "adminUsername": "[variables('workVMSettings').adminUsername]",
          "adminPassword": "[variables('workVMSettings').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('workVMSettings').publisher]",
            "offer": "[variables('workVMSettings').offer]",
            "sku": "[variables('workVMSettings').sku]",
            "version": "[variables('workVMSettings').version]"
          },
          "osDisk": {
            "name": "[concat(variables('workVMSettings').osdisk,copyindex(1))]",
            "vhd": {
              "uri": "[concat('http://', parameters('stdStorageName'), '.blob.core.windows.net/', variables('vmStorageAccountContainerName'), '/', variables('workVMSettings').osdisk, copyindex(1),'.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('workVMSettings').nicName,copyindex(1)))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": "true",
            "storageUri": "[concat('http://',parameters('stdStorageName'),'.blob.core.windows.net')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('workVMSettings').vmName,copyindex(1),'/joindomain')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', concat(variables('workVMSettings').vmName,copyindex(1)))]"
      ],
      "tags": {
        "displayName": "JoinDomain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.0",
        "settings": {
          "Name": "[parameters('domainToJoin')]",
          "OUPath": "",
          "User": "[parameters('domainUsername')]",
          "Restart": "true",
          "Options": "3"
        },
        "protectedsettings": {
          "Password": "[parameters('domainPassword')]"
        }
      },
      "copy": {
        "name": "joinDomainLoop",
        "count": "[parameters('wrkCount')]"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('workVMSettings').vmName,copyindex(1),'/setupiis')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[variables('location')]",
      "dependsOn": [
        "joinDomainLoop",
        "[concat('Microsoft.Compute/virtualMachines/', variables('workVMSettings').vmName,copyindex(1))]"
      ],
      "tags": { "displayName": "Setup IIS" },
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.8",
        "settings": {
          "ModulesUrl": "[parameters('modulesUrl')]",
          "ConfigurationFunction": "[parameters('configurationFunction')]",
          "Properties": {
            "MachineName": "[concat(variables('workVMSettings').vmName,copyindex(1))]"
          }
        },
        "protectedSettings": null
      },
      "copy": {
        "name": "setupIISLoop",
        "count": "[parameters('wrkCount')]"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('workVMSettings').vmName,copyindex(1),'/confgiureOctoTentacle')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "setupIISLoop",
        "[concat('Microsoft.Compute/virtualMachines/', variables('workVMSettings').vmName,copyindex(1))]"
      ],
      "tags": { "displayName": "Octo Setup Script" },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.2",
        "settings": {
          "fileUris": "[variables('VMScripts').fileUris]",
          "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ',variables('VMScripts').commandToExecute,' -port ',variables('octoPorts')[copyIndex()])]"
        }
      },
      "copy": {
        "name": "webvmcount",
        "count": "[parameters('wrkCount')]"
      }
    }

  ],
  "outputs": {
    "nicname1": {
      "value": "[concat('Microsoft.Network/networkInterfaces/', variables('workVMSettings').nicName, 1)]",
      "type": "string"
    },
    "nicname2": {
      "value": "[concat('Microsoft.Network/networkInterfaces/', variables('workVMSettings').nicName, 2)]",
      "type": "string"
    }
  }
}
